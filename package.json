{
  "name": "atix-solidity-template",
  "version": "0.0.1",
  "description": "Atix Solidity project template",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@nomiclabs/buidler": "1.4.7",
    "@nomiclabs/buidler-ethers": "2.0.0",
    "@nomiclabs/buidler-solhint": "1.3.3",
    "@nomiclabs/buidler-waffle": "2.1.0",
    "buidler-gas-reporter": "0.1.3",
    "chai": "4.2.0",
    "concurrently": "5.3.0",
    "ethereum-waffle": "3.1.0",
    "ethers": "5.0.14",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "solidity-coverage": "0.7.10"
  },
  "scripts": {
    "test": "buidler test",
    "lint": "buidler check",
    "coverage": "buidler coverage --network coverage",
    "local-node": "buidler node",
    "gas-usage": "export REPORT_GAS=true &&  concurrently --kill-others --success \"first\" \"npm:local-node\" \"buidler test --network localhost\""
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
